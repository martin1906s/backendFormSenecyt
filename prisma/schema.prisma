// Modelo para almacenar información de periodos académicos
model PeriodoAcademico {
  id Int @id @default(autoincrement())

  estudiantes Estudiante[]
}

// Modelo principal para almacenar información de estudiantes matriculados (Sistema GRIPP)
model Estudiante {
  id Int @id @default(autoincrement())

  // Campo 1: Tipo de documento de identificación
  tipoDocumento        TipoDocumento
  // Campo 2: Número de documento de identificación
  numeroIdentificacion String

  // Campo 3: Primer apellido del estudiante
  primerApellido       String
  // Campo 4: Segundo apellido del estudiante
  segundoApellido      String @default("NA")
  // Campo 5: Primer nombre del estudiante
  primerNombre         String
  // Campo 6: Segundo nombre del estudiante
  segundoNombre        String @default("NA")

  // Campo 7: Sexo del estudiante
  sexo                 Sexo
  // Campo 8: Género del estudiante
  genero               Genero
  // Campo 9: Estado civil
  estadoCivil          EstadoCivil
  // Campo 10: Etnia
  etnia                Etnia
  // Campo 11: Pueblo y nacionalidad
  puebloNacionalidadId String @default("NA")
  // Campo 12: Tipo de sangre del estudiante
  tipoSangre           TipoSangre
  // Campo 13: Tiene discapacidad
  discapacidad            Discapacidad
  // Campo 14: Porcentaje de discapacidad
  porcentajeDiscapacidad String @default("NA")
  // Campo 15: Nro. Carnet de discapacidad
  numCarnetConadis       String @default("NA")
  // Campo 16: Tipo de discapacidad
  tipoDiscapacidad     TipoDiscapacidad
  // Campo 17: Fecha de nacimiento (Caracter 10)
  fechaNacimiento        String
  // Campo 18: País de nacionalidad
  paisNacionalidadId     String
  // Campo 19: Provincia de nacimiento?
  provinciaNacimientoId String @default("NA")
  // Campo 20: Cantón de nacimiento
  cantonNacimientoId    String
  // Campo 21: País de residencia
  paisResidenciaId       String
  // Campo 22: Provincia de residencia
  provinciaResidenciaId String @default("NA")
  // Campo 23: Cantón de residencia
  cantonResidenciaId    String @default("NA")
  // Campo 24: Tipo de colegio
  tipoColegioId        TipoColegio
  // Campo 25: Modalidad de la carrera
  modalidadCarrera     ModalidadCarrera
  // Campo 26: Jornada de la carrera
  jornadaCarrera       JornadaCarrera
  // Campo 27: Fecha en que inició el estudiante la carrera (Caracter 10)
  fechaInicioCarrera     String
  // Campo 28: Fecha de matrícula (Caracter 10)
  fechaMatricula         String
  // Campo 29: Tipo de matrícula
  tipoMatricula          TipoMatricula
  // Campo 30: Nivel académico
  nivelAcademico         NivelAcademico
  // Campo 31: Número de semanas de duración del periodo académico
  duracionPeriodoAcademico Int
  // Campo 32: Ha repetido al menos una materia
  haRepetidoAlMenosUnaMateria HaRepetidoAlMenosUnaMateria
  // Campo 33: Paralelo
  paralelo               Paralelo
  // Campo 34: Ha perdido la gratuidad
  haPerdidoLaGratuidad   HaPerdidoLaGratuidad
  // Campo 35: Posee pensión diferenciada
  recibePensionDiferenciada RecibePensionDiferenciada

  // Campo 36: El estudiante se encuentra dedicado a
  estudianteOcupacion    EstudianteOcupacion
  // Campo 37: El estudiante para qué emplea sus ingresos
  ingresosEstudiante     IngresosEstudiante
  // Campo 38: La familia del estudiante recibe el bono de desarrollo humano
  bonoDesarrollo         BonoDesarrollo

  // Campo 39: El estudiante ha realizado prácticas preprofesionales
  haRealizadoPracticasPreprofesionales HaRealizadoPracticasPreprofesionales
  // Campo 40: Horas de la última práctica preprofesional que realizó el estudiante
  nroHorasPracticasPreprofesionalesPorPeriodo String @default("NA")
  // Campo 41: Tipo de institución en el que realiza las prácticas preprofesionales
  entornoInstitucionalPracticasProfesionales EntornoInstitucionalPracticasProfesionales
  // Campo 42: Sector económico en el que realizó las prácticas preprofesionales
  sectorEconomicoPracticaProfesional SectorEconomicoPracticaProfesional

  // Campo 43: Tipo de beca que recibe el estudiante
  tipoBeca               TipoBeca
  // Campo 44: Primera razón de la beca
  primeraRazonBeca       PrimeraRazonBeca
  // Campo 45: Segunda razón de la beca
  segundaRazonBeca       SegundaRazonBeca
  // Campo 46: Tercera razón de la beca
  terceraRazonBeca       TerceraRazonBeca
  // Campo 47: Cuarta razón de la beca
  cuartaRazonBeca        CuartaRazonBeca
  // Campo 48: Quinta razón de la beca (Cadena de texto, 10)
  quintaRazonBeca        QuintaRazonBeca
  // Campo 49: Sexta razón de la beca
  sextaRazonBeca         SextaRazonBeca
  // Campo 50: Valor del monto de la beca
  montoBeca              String @default("NA")
  // Campo 51: Porcentaje de la beca que cubre el valor del arancel
  porcentajeBecaCoberturaArancel String @default("NA")
  // Campo 52: Porcentaje de la beca que cubre la manutención
  porcentajeBecaCoberturaManutencion String @default("NA")
  // Campo 53: Tipo de financiamiento de la beca
  financiamientoBeca     FinanciamientoBeca?
  // Campo 54: Valor del monto de la ayuda económica
  montoAyudaEconomica    String @default("NA")
  // Campo 55: Valor del monto de crédito educativo
  montoCreditoEducativo  String @default("NA")

  // Campo 56: Ha participado durante el periodo de un proyecto de vinculación social
  participaEnProyectoVinculacionSociedad ParticipaEnProyectoVinculacionSociedad
  // Campo 57: Alcance del proyecto de vinculación con la sociedad
  tipoAlcanceProyectoVinculacion TipoAlcanceProyectoVinculacion?

  // Campo 58: Correo electrónico del estudiante
  correoElectronico      String @default("NA")
  // Campo 59: Número de celular del estudiante
  numeroCelular          String

  // Campo 60: Nivel de formación del padre
  nivelFormacionPadre    NivelFormacionPadre
  // Campo 61: Nivel de formación de la madre
  nivelFormacionMadre    NivelFormacionMadre
  // Campo 62: Ingresos del hogar
  ingresoTotalHogar      String @default("NA")
  // Campo 63: Número de miembros del hogar
  cantidadMiembrosHogar  Int

  // Relación con periodo académico
  periodoAcademicoId     Int
  periodoAcademico       PeriodoAcademico @relation(fields: [periodoAcademicoId], references: [id])

  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  @@unique([numeroIdentificacion, tipoDocumento])
}
